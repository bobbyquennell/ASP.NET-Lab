@model eManager.Domain.Department

@{
    ViewBag.Title = "Detail";
}

<h2>@Model.Name</h2>
@if (User.IsInRole("admin"))
{
    <div>@Html.ActionLink("Create an Employee", "Create", "Employee", 
    new { departmentId = Model.DepartmentId }, null)
    </div>
}

<table>
    <tr>
        <th>Name</th>
        <th>Hire Date</th>
    </tr>
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@employee.Name</td>
            <td>@employee.HireDate</td>
        </tr>

    }
</table>



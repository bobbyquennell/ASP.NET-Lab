@model GPASystem.Web.Models.Learner.LearnerIndexViewModel
<div>
    <h4>@Model.CourseName</h4>
</div>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Age
        </th>
        <th>
            GPA
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td class="GPA">
                @Html.DisplayFor(modelItem => item.Gpa)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>
<form action=@Url.Action("Create","Learner",new{ id = Model.CourseId}) method="get">
    <input type="submit" value="Add a Student" />
</form>
@model IEnumerable<QuantumITSchoolGPA.Models.Student>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GPA)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="studentName">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td class="studentGpa">
                @Html.DisplayFor(modelItem => item.GPA)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Student", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Student", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
